<div class="row">
<div class="col-xs-10 col-xs-offset-1">
<div class="text-center">

  <h2><%= @record.date %>の記録</h2>
  
  <table class="table table-bordered show-table">
    <thead class="info">
    <tr class="info">
      <th class="text-center" id="align-middle">項目</th>
      <th class="text-center" id="align-middle">投稿内容</th>
    </tr>
    </thead>

    <tr class="white">
      <th class="text-center" id="align-middle">勉強時間</th>
      <td id="align-middle"><%= @record.hour%></td>
    </tr>

    <tr class="white">
      <th class="text-center" id="align-middle">やったこと</th>
      <td class="text-left" id="align-middle"><%= safe_join(@record.content.split("\n"),tag(:br)) %></td>
    </tr>  

    <tr class="white">
      <th class="text-center" id="align-middle">メモ</th>
      <td class="text-left" id="align-middle"><%= safe_join(@record.memo.split("\n"),tag(:br)) %></td>
    </tr>

    <tr class="white">
      <th class="text-center" id="align-middle">覚えたこと</th>
      <td class="text-left" id="align-middle"><%= safe_join(@record.study.split("\n"),tag(:br)) %></td>
    </tr>
  </table>

  <div class="btn btn-success btn-block">
    <%= link_to("修正する", "/records/#{@record.id}/edit") %>
  </div>
  <div class="btn btn-danger btn-block">
    <%= link_to("削除する", "/records/#{@record.id}", method: "DELETE", data: { confirm: "一度削除すると復元できません。削除しでも大丈夫ですか？" }) %>
  </div>

</div>
</div>
</div>

<br><br>